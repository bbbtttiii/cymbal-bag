<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@user.errors.count, "error") %>:</h3>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>

    <%= f.label "Username:" %>
    <%= f.text_field :username %>
    <br>
    <%= f.label "Email:" %>
    <%= f.text_field :email %>
    <br>
    <%= f.label "Password" %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit %>

<% end %>
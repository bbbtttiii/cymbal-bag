<%= form_for @cymbal do |f|%>
    <%= f.fields_for :favorites do |fav| %>
        <%= fav.label "Name:" %>
        <%= fav.text_field :name %><small> ('main crash', 'side ride', etc.)</small>
    <% end %>
    <br>
    <%= f.label "Brand:" %>
    <%= f.text_field :brand %> <small> ('Zildjian')</small>
    <br>
    <%= f.label "Line:" %>
    <%= f.text_field :line %> <small> ('K Custom')</small>
    <br>
    <%= f.label "Model:" %>
    <%= f.text_field :cym_model %> <small> ('Dry')</small>
    <br>
    <%= f.label "Type:" %>
    <%= f.select :cym_type, ['Crash', 'Ride', 'Hi-hat', 'Crash-Ride', 'Splash', 'China', 'Bell', 'Misc'] %>
    <br>
    <%= f.label "Diameter (in):" %>
    <%= f.number_field :diameter %>
    <br>
    <%= f.label "Weight (g):" %>
    <%= f.number_field :weight %>
    <br>
    <%= f.label "Finish:" %>
    <%= f.select :finish, ['Natural', 'Brilliant', 'Raw', 'Mixed'] %>
    <br>
    <br>
    <%= f.submit "Done" %>
<% end %>
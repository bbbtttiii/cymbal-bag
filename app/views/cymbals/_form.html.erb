<%= form_for @cymbal do |f|%>

    <% f.hidden_field :bag_ids %>

    <%= f.label "Brand:" %>
    <%= f.text_field :brand %>
    <br>
    <%= f.label "Line:" %>
    <%= f.text_field :line %>
    <br>
    <%= f.label "Model:" %>
    <%= f.text_field :cym_model %>
    <br>
    <%= f.label "Type:" %>
    <%= f.text_field :cym_type %>
    <br>
    <%= f.label "Diameter (in):" %>
    <%= f.number_field :diameter %>
    <br>
    <%= f.label "Weight (g):" %>
    <%= f.number_field :weight %>
    <br>
    <%= f.label "Finish:" %>
    <%= f.text_field :finish %>
    <br>
    <br>
    <%= f.submit "Add another", name: "add"%>
    <%= f.submit "Done" %>

<% end %>